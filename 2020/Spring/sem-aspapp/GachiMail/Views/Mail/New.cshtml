@model GachiMail.Models.NewMailModel

@{
    ViewData["Title"] = "WriteLetter";
}

<h1>Отправить письмо</h1>
<div class="mail">
    <form asp-action="New" asp-controller="Mail" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly" />
        <div>
            <div class="form-group">
                <label asp-for="Title">Тема</label>
                <input type="text" asp-for="Title" />
                <span asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="Receivers">Получатели</label>
                <input type="text" asp-for="Receivers" />
                <span asp-validation-for="Receivers"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content">Содержимое</label>
                <input type="text" asp-for="Content" />
                <span asp-validation-for="Content"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Отправить" class="btn btn-outline-dark" />
            </div>
        </div>
    </form>
</div>


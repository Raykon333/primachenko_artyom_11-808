@model GachiMail.Models.NewMailboxModel

@{
    ViewData["Title"] = "MailboxCreate";
}

<h3>Создание ящика</h3>
<form asp-action="NewMailbox" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <label asp-for="MailboxName">Имя ящика</label>
            <input type="text" asp-for="MailboxName" />
            <span asp-validation-for="MailboxName"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Создать" class="btn btn-outline-dark" />
        </div>
    </div>
</form>
@await Html.PartialAsync("Error")



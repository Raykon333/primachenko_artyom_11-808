@model GachiMail.Models.AddCurrencyModel

<form asp-action="AddCurrency" asp-controller="Account" asp-anti-forgery="true">
    <div>
        <div class="validation" asp-validation-summary="ModelOnly" />
        <div class="form-group" style="float: left">
            <input type="number" step="1" asp-for="Currency" />
            <span asp-validation-for="Currency"></span>
        </div>
        <div class="form-group" style="padding-left: 5px; float: left">
            <input type="submit" value="Пополнить" class="btn btn-outline-dark" />
        </div>
    </div>
</form>

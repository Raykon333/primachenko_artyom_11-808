@model GachiMail.Models.MailboxOptionsModel

<form asp-action="ChangeMailboxOptions" asp-controller="Mailbox" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <input type="hidden" asp-for="folder" value="@Context.Request.Query["folder"]" />
        </div>
        <div class="form-group">
            <label asp-for="sorting">Сортировка</label>
            <select name="sorting" style="width: 50%" class="form-control">
                <option value="new">Сначала новые</option>
                <option value="old">Сначала старые</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="pageSize">Писем на странице</label>
            <input type="number" step="1" asp-for="pageSize" />
        </div>
        <div class="form-group">
            <label asp-for="address">Фильтрация по адресу</label>
            <input type="text" asp-for="address" />
        </div>
        <div class="form-group">
            <input type="submit" value="Применить" class="btn btn-outline-dark" />
        </div>
    </div>
</form>
